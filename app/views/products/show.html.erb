<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <strong>Brand:</strong>
  <%= @product.brand %>
</p>

<p>
  <strong>Supllier:</strong>
  <%= @product.supplier.name %>
</p>

<div>
  <% if @product.image.present? %>
    <div class="card-image">
      <figure class="image">
        <%= image_tag @product.image%>
      </figure>
    </div>
    <% end %>
</div>

<p>
  <strong>Price:</strong>
  $<%=  @product.price %>
</p>

<%= link_to 'Back', products_path %>
