<h1>Sign up</h1>

<%= form_with(model: @customer, local: true) do |f| %>

<div class="form-group">
  <%= f.label :username %><br/>
  <%= f.text_field :username, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :email %><br/>
  <%= f.email_field :email, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :postal_code %><br/>
  <%= f.text_field :postalcode, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :address %><br/>
  <%= f.text_field :address, class: "form-control" %>
</div>

<div class="field">
  <%= f.label :province_id %><br/>
  <%= f.select :province_id, Provinc.order(:name)  %>
</div>

<div class="form-group">
  <%= f.label :password %><br/>
  <%= f.password_field :password_digest, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.submit %>
</div>

<% end %>